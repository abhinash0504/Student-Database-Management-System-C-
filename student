#include <iostream>
#include <string>
using namespace std;

struct Student {
    int roll;
    string name;
    float marks;
};

Student students[100]; // Array to store students
int countStudents = 0;

// Add Student
void addStudent() {
    cout << "Enter Roll No: ";
    cin >> students[countStudents].roll;
    cout << "Enter Name: ";
    cin.ignore();
    getline(cin, students[countStudents].name);
    cout << "Enter Marks: ";
    cin >> students[countStudents].marks;
    countStudents++;
    cout << "\u2705 Record added successfully!\n\n";
}

// Display All Students
void displayStudents() {
    if (countStudents == 0) {
        cout << "No records found!\n\n";
        return;
    }
    for (int i = 0; i < countStudents; i++) {
        cout << "Roll No: " << students[i].roll
             << " | Name: " << students[i].name
             << " | Marks: " << students[i].marks << endl;
    }
    cout << endl;
}

// Search Student
void searchStudent() {
    int roll;
    cout << "Enter Roll No to search: ";
    cin >> roll;
    for (int i = 0; i < countStudents; i++) {
        if (students[i].roll == roll) {
            cout << "\u2705 Found: Roll " << students[i].roll
                 << " | Name: " << students[i].name
                 << " | Marks: " << students[i].marks << endl << endl;
            return;
        }
    }
    cout << "\u274C Student not found!\n\n";
}

// Delete Student
void deleteStudent() {
    int roll;
    cout << "Enter Roll No to delete: ";
    cin >> roll;
    for (int i = 0; i < countStudents; i++) {
        if (students[i].roll == roll) {
            for (int j = i; j < countStudents - 1; j++) {
                students[j] = students[j + 1];
            }
            countStudents--;
            cout << "\u2705 Record deleted successfully!\n\n";
            return;
        }
    }
    cout << "\u274C Student not found!\n\n";
}

int main() {
    int choice;
    do {
        cout << "====== Student Record Management ======\n";
        cout << "1. Add Student\n";
        cout << "2. Display All Students\n";
        cout << "3. Search Student\n";
        cout << "4. Delete Student\n";
        cout << "5. Exit\n";
        cout << "Enter choice: ";
        cin >> choice;

        switch (choice) {
            case 1: addStudent(); break;
            case 2: displayStudents(); break;
            case 3: searchStudent(); break;
            case 4: deleteStudent(); break;
            case 5: cout << "Exiting...\n"; break;
            default: cout << "Invalid choice!\n\n";
        }
    } while (choice != 5);

    return 0;
}
